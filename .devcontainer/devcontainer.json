{
	"image": "mcr.microsoft.com/vscode/devcontainers/base",	
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-azurecli",
				"ms-azuretools.vscode-bicep"
			]
		},
		"settings": {}
	},
	"features": {
		"rchaganti/vsc-devcontainer-features/azurebicep" : {
			"version": "latest"
		},
		"azure-cli": {
			"version": "latest"
		}
	},
	"remoteUser": "vscode"
}

